<html>
    <head>
        <link rel="icon" type="image/png" href="/images/favicon.ico"/>
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
        <link rel="stylesheet" type="text/css" href="../public/css/profile_style.css">   
        <script type="text/javascript" src="/public/javascript/editprofile.js"></script>  
    </head>

    <body>
        {{> nav }}
        <div id="page">
            <br><br>
            <img id="profile_pic" src="/public/avatars/{{avatar}}" alt="Profile Photo" />
            <div id="info">
                <br><br>
                <p id="small_p">Username</p>
                <h1 id="username">{{username}}</h1><br>
                <p id="small_p">Short Description</p> <br>
                <p id="short_desc"> {{description}}</p>
                <br><br><br>
            </div>
            <br>
            <div id="side_menu">
                <br>
                <ul style="list-style-type:none;">
                    <li>
                        <a id = "small_link" href ="/edit-profile"> <i class="fa fa-edit"></i> Edit Profile</a>
                    </li>
                    <li> 
                        <form method="POST" action="/delete">
                            <button id="delete-acct" type="submit" >Delete Profile</button>
                        </form>
                        
                    </li>
                    <li> 
                        <a id = "small_link" href="/logout">Log Out</a>
                    </li>
                    <li> 
                        <a id = "small_link" href="/">Home</a>
                    </li>
                </ul>
            </div>
            <br><br>
            <hr>
            <br>
            <div class="like_div">
                <h3 id= "likes"><i id="heart" class="fa fa-heart"></i> Liked Recipes </h3>
                <div id="chicken">
                    {{#each likes}}
                        <a href="/recipe/{{this._id}}"><img class="rec" src="../public/uploads/{{this.image}}"  /></a>
                        <a href="/recipe/{{this._id}}"  class="cap"><p>{{this.title}}<br> by: {{this.author}}</p></a>
                    {{ else }}
                    <h3 id= "activity">No likes yet</h3>
                    {{/each}}
                </div>
            </div>
        </div>

    </body>
</html>