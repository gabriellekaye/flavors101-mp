<html>
    <head>
        <link rel="icon" type="image/png" href="/images/favicon.ico"/>
        <link rel="stylesheet" type="text/css" href="../public/css/profile_style.css">   
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
        <script type="text/javascript" src="/javascript/editprofile.js"></script>  
    </head>

    <body>
        {{> nav }}
        <div id="page">
            <br><br>
            <img id="profile_pic" src="/public/avatars/{{avatar}}" alt="Profile Photo" />
            <div id="info">
                <br><br>
                <p id="small_p">Username</p>
                <h1 id="username">{{username}}</h1><br>
                <p id="small_p">Short Description</p> <br>
                <p id="short_desc"> {{description}}</p>
                <br><br><br>
            </div>
            <br><br>
            <hr>
            <br>
            <div class="like_div">
                <h3 id= "likes">Recent Activity</h3>
                <ul style="list-style-type:none;">
                    {{#each recipe}}
                        <li> 
                            <p id="activity">Posted <a id = "small_link" href ="/recipe/{{this._id}}">{{this.title}}</a> recipe.</p>
                        </li>
                    {{ else }}
                        <h3 id= "activity">No recent activity <i id="frown" class="fa fa-frown-o" aria-hidden="true"></i></h3>
                    {{/each}}
                </ul>
            </div>
        </div>

    </body>
</html>